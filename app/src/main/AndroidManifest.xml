<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wgutermtracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WGU_C196_TermTracker_GarrisonJSmith">

        <receiver
            android:name=".UI.AssessmentNotificationReceiver"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".UI.CourseNotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".UI.AssessmentDetailActivity"
            android:label="@string/assessmentDetailActibityTitle" />
        <activity
            android:name=".UI.InstructorListActivity"
            android:label="@string/instructorListActivityTitle" />
        <activity
            android:name=".UI.TermListActivity"
            android:label="@string/termListActivityTitle"
            android:parentActivityName=".UI.MainActivity" />
        <activity
            android:name=".UI.TermDetailActivity"
            android:label="@string/termDetailActivityTitle" />
        <activity
            android:name=".UI.EditTermActivity"
            android:label="@string/editTermActivityTitle" />
        <activity
            android:name=".UI.CourseDetailActivity"
            android:label="@string/courseDetailActivityTitle" />
        <activity
            android:name=".UI.EditCourseActivity"
            android:label="@string/editCourseActivityTitle" />
        <activity
            android:name=".UI.EditInstructorActivity"
            android:label="@string/editInstructorActivityTitle" />
        <activity
            android:name=".UI.EditAssessmentActivity"
            android:label="@string/editAssessmentActivityTitle" />
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/mainActivityTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>